{
  "name": "@the-project-b/evaluation",
  "version": "1.0.0",
  "description": "Service responsible for running experiments on target datasets, using self-defined evaluators for scoring.",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "LOGGING_OUTPUT_FORMAT=pretty tsx watch src/main.ts",
    "build": "tsc",
    "build:docker": "node esbuild.config.js",
    "codegen": "graphql-codegen --config codegen.ts",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "experiments:analyse:run": "tsx src/scripts/analyze-run.ts",
    "experiments:verify:evaluator": "tsx src/scripts/analysis/verify-data-change-proposal-evaluator.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@opentelemetry/api": "^1.9.0",
    "@the-project-b/experiments": "*",
    "@the-project-b/graphql": "*",
    "@the-project-b/logging": "*",
    "@the-project-b/rita-graphs": "*",
    "chalk": "^5.6.0",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "diff": "^8.0.2",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "graphql-scalars": "^1.24.2",
    "graphql-tag": "^2.12.6",
    "langsmith": "^0.3.63",
    "openai": "^5.6.0",
    "openevals": "^0.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@tsconfig/recommended": "^1.0.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "esbuild": "^0.25.8",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^9.32.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.8.3"
  }
}
