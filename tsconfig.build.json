{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmitOnError": true
  },
  "include": [
    "rita/**/*.ts"
  ],
  "exclude": [
    "rita/**/*.spec.ts",
    "rita/**/*.test.ts",
    "dist",
    "node_modules"
  ]
} 