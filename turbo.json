{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "jest.config.*", "**/*.test.*", "**/*.spec.*"]
    },
    "clean": {
      "cache": false
    },
    "generate": {
      "inputs": ["$TURBO_DEFAULT$", "codegen.ts", "**/*.graphql"],
      "outputs": ["src/generated/**"]
    },
    "langgraph:dev": {
      "cache": false,
      "persistent": true
    },
    "langgraph:dev:tunnel": {
      "cache": false,
      "persistent": true
    }
  }
}